{
  "name": "yapms-project",
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "check": "turbo run check",
    "lint-no-warnings": "turbo run lint-no-warnings",
    "lint": "turbo run lint",
    "format": "turbo run format"
  },
  "devDependencies": {
    "@devcontainers/cli": "^0.55.0",
    "dotenv-cli": "^7.3.0",
    "dotenv-vault": "^1.25.0",
    "turbo": "^1.12.2"
  },
  "workspaces": [
    "./apps/yapms",
    "./apps/pocketbase",
    "./apps/docs"
  ],
  "renovate": {
    "extends": [
      ":automergeLinters",
      "config:js-app",
      "group:turboMonorepo"
    ],
    "packageRules": [
      {
        "matchUpdateTypes": [
          "patch",
          "pin",
          "digest"
        ],
        "automerge": true
      }
    ]
  }
}
