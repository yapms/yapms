					"onerror",
					"onmouseenter",
					"onscroll",
					"onload",
					"onresize",
					"onmouseover",
					"ondragover",
					"ondragstart",
					"oninput",
					"onpagehide",
					"oncanplaythrough",
					"onmousemove",
					"oninvalid",
					"ontimeupdate",
					"onratechange",
					"ondurationchange",
					"onmouseup",
					"onmessageerror",
					"ondevicemotion",
					"onkeypress",
					"onwheel",
					"onpointerleave",
					"location",
					"onauxclick",
					"ononline",
					"onselect",
					"ondrop",
					"onkeydown",
					"onclose",
					"ondeviceorientationabsolute",
					"ontransitionend",
					"onpageshow",
					"ondeviceorientation",
